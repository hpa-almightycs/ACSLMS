<odoo>


    <record id="view_author_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_author" widget="button_group" />
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Details" name="details" invisible="is_author == False">
                    <group>
                        <field name="nationality" />
                        <field name="category" />
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="view_author_list" model="ir.ui.view">
        <field name="name">res.partner.list</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="category" />
            </list>
        </field>
    </record>


    <record id="acs_action_author" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("is_author","=","true")]</field>
        <field name="view_id" ref="view_author_list" />
    </record>


</odoo>