<odoo>
    <record id="view_wizard_list" model="ir.ui.view">
        <field name="name">acs.wizard.list</field>
        <field name="model">acs.wizard</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="view_wizard_form" model="ir.ui.view">
        <field name="name">acs.wizard.form</field>
        <field name="model">acs.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="staff_member" />
                    </group>
                </sheet>
                <footer>
                    <button name="sample_wizard" string="Add Employee" type="object" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_acs_wizard" model="ir.actions.act_window">
        <field name="name">Wizard</field>
        <field name="res_model">acs.wizard</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>