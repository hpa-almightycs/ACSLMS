<odoo>
    <data>
        <!--ACCESS RIGHTS OR HIDE DATA ACCORDING TO NEED-->
        <record id="acs_module_category_library" model="ir.module.category">
            <field name="name">Library</field>
            <field name="description">Library Management System</field>
        </record>

        <record id="group_lms_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="acs_library_management.acs_module_category_library" />
        </record>

        <record id="group_lms_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="acs_library_management.acs_module_category_library" />
        </record>

        <record id="group_lms_librarian" model="res.groups">
            <field name="name">Librarian</field>
            <field name="category_id" ref="acs_library_management.acs_module_category_library" />
            <field name="implied_ids" eval="[(4, ref('acs_library_management.group_lms_user')), (4, ref('acs_library_management.group_lms_employee'))]" />
        </record>


        <record id="group_lms_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="acs_library_management.acs_module_category_library" />
            <field name="implied_ids"
                eval="[(4, ref('acs_library_management.group_lms_user')),(4,ref('acs_library_management.group_lms_employee')),(4,ref('acs_library_management.group_lms_librarian'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        </record>


        <!--RECORD
        RULES , IT DOES NOT HIDE DATA IT WILL GIVE ACCESS FOR READ , WRITE , CREATE , UNLINK
        ACCORDING TO NEED-->
        <record id="acs_manager_library_rule" model="ir.rule">
            <field name="name">Manager Rule</field>
            <field name="model_id" ref="hr.model_hr_employee" />
            <field name="domain_force">[
                '|',
                ('company_id', 'in', user.company_ids.ids),
                ('company_id', '=', False)
                ]</field>
            <field name="groups" eval="[(4, ref('acs_library_management.group_lms_manager'))]" />
        </record>
    </data>
</odoo>